{% extends 'base.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
    <h1>Experience</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ experience.title }}</td>
            </tr>
            <tr>
                <th>Beginning</th>
                <td>{{ experience.beginning ? experience.beginning|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ experience.end ? experience.end|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Organism</th>
                <td>{{ experience.organism }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ experience.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ experience.description }}</td>
            </tr>
            <tr>
                <th>Diploma</th>
                <td>{{ experience.diploma }}</td>
            </tr>
            <tr>
                <th>IsFormation</th>
                <td>{{ experience.isFormation ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_experience_index') }}">back to list</a>

    <a href="{{ path('app_experience_edit', {'id': experience.id}) }}">edit</a>

    {{ include('experience/_delete_form.html.twig') }}
{% endblock %}
