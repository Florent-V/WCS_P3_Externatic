{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Beginning</th>
                <th>End</th>
                <th>Organism</th>
                <th>Location</th>
                <th>Description</th>
                <th>Diploma</th>
                <th>IsFormation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.title }}</td>
                <td>{{ experience.beginning ? experience.beginning|date('Y-m-d') : '' }}</td>
                <td>{{ experience.end ? experience.end|date('Y-m-d') : '' }}</td>
                <td>{{ experience.organism }}</td>
                <td>{{ experience.location }}</td>
                <td>{{ experience.description }}</td>
                <td>{{ experience.diploma }}</td>
                <td>{{ experience.isFormation ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('app_experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_experience_new', {'type': 'experience'}) }}">Ajouter une nouvelle exp√©rience</a>
    <br>
    <a href="{{ path('app_experience_new', {'type': 'formation'}) }}">Ajouter une nouvelle formation</a>
    <br>
    <a href="{{ path('app_candidat_profile') }}">Retour au profil</a>

{% endblock %}
