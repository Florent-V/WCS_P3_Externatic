{% extends 'base.html.twig' %}

{% block title %}Hobbie index{% endblock %}

{% block body %}
    <h1>Hobbie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hobbie in hobbies %}
            <tr>
                <td>{{ hobbie.id }}</td>
                <td>{{ hobbie.title }}</td>
                <td>
                    <a href="{{ path('app_hobbie_show', {'id': hobbie.id}) }}">show</a>
                    <a href="{{ path('app_hobbie_edit', {'id': hobbie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hobbie_new') }}">Ajouter un nouveau Hobbie</a>
    <br>
    <a href="{{ path('app_candidat_profile') }}">Retour au profil</a>
{% endblock %}
