<div {{ attributes }}>
    {% if this.isSubmitted %}
        <div class="alert bg-success">
            enregistrement effectu√©
        </div>
    {% endif %}

    {{ form_start(form, {
        attr: {
            'data-action': 'live#action',
            'data-action-name': 'prevent|save'
        }
    }) }}

    {{ form_row(form.title, {
        label: 'Nom du Hobby',
        attr: {
            placeholder: 'Nom du Hobby'
        },
        row_attr: {
            class: 'form-floating mb-3'
        }
    }) }}

    <button class="btn">{{ button_label|default('Ajouter') }}</button>
    {{ form_end(form) }}
</div>
