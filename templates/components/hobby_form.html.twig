<div {{ attributes }}>
    {% if this.isSubmitted %}
        <div class="alert alert-success" role="alert">
            Nouveau hobby ajout√©
        </div>
    {% endif %}
    <div {{ stimulus_controller('emptyHobbyForm') }}></div>
    <div {{ stimulus_controller('global') }}></div>

    {{ form_start(form, {
        attr: {
            'data-action': 'live#action',
            'data-action-name': 'prevent|save',
            'id': 'hobbyForm'
        }
    }) }}

    {{ form_row(form.title, {
        label: 'Nom du Hobby',
        attr: {
            placeholder: 'Nom du Hobby'
        },
        row_attr: {
            class: 'form-floating mb-3'
        }
    }) }}

    <button class="btn">{{ button_label|default('Ajouter') }}</button>
    {{ form_end(form) }}
</div>
