{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Siret</th>
                <th>Name</th>
                <th>Logo</th>
                <th>ZipCode</th>
                <th>Address</th>
                <th>City</th>
                <th>PhoneNumber</th>
                <th>ContactName</th>
                <th>Size</th>
                <th>Information</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.name }}</td>
                <td><img style="height: 100px" src="{{ vich_uploader_asset(company) }}" alt="{{ company.name }}"></td>
                <td>{{ company.zipCode }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.phoneNumber }}</td>
                <td>{{ company.contactName }}</td>
                <td>{{ company.size }}</td>
                <td>{{ company.information }}</td>
                <td>
                    <a href="{{ path('admin_app_company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('admin_app_company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_app_company_new') }}">Create new</a>
{% endblock %}
