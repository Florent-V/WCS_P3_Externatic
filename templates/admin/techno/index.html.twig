{% extends 'base.html.twig' %}

{% block title %}Techno index{% endblock %}

{% block body %}
    <main class="container-md">
        <h1>Techno index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Logo</th>
                <th>Derni√®re Modification</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for techno in technos %}
                <tr>
                    <td>{{ techno.id }}</td>
                    <td>{{ techno.name }}</td>
                    <td><img style="height: 100px" src="{{ vich_uploader_asset(techno) }}" alt="{{ techno.name }}"></td>
                    <td>{{ techno.updatedAt ? techno.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('admin_app_techno_edit', {'id': techno.id}) }}">edit</a>
                        {{ include('admin/techno/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center">
            <a class="btn btn-primary" href="{{ path('admin_app_techno_new') }}">Create new</a>
        </div>
    </main>
{% endblock %}
