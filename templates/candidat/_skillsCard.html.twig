<div id="skillsPanel" class="showCard skills">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title text-center">Mes Comp√©tences</h3>

            <div class="card mb-4">
                {% if not is_granted('ROLE_CONSULTANT') %}
                    <div class="cardIcons">
                        <a href="{{ path('app_hard_skill_new') }}"><i class="bi bi-plus-lg"></i></a>
                    </div>
                {% endif %}
                <div class="card-header">
                    <h5 class="card-title">Mes Hard Skills</h5>
                </div>
                <div class="card-body">
                    {% for hardSkill in hardSkills %}
                        <span class="badge rounded-pill text-bg-light m-1">
                            {{ hardSkill.name }}
                            {% if not is_granted('ROLE_CONSULTANT') %}
                                <a href="{{ path('app_hard_skill_edit', {id: hardSkill.id}) }}"><i
                                        class="bi bi-pencil-square"></i></a>
                                {{ include('hard_skill/_delete_form.html.twig') }}
                            {% endif %}
                        </span>
                    {% endfor %}

                </div>
            </div>

            <div class="card mb-4">
                {% if not is_granted('ROLE_CONSULTANT') %}
                    <div class="cardIcons">
                        <a href="{{ path('app_soft_skill_new') }}"><i class="bi bi-plus-lg"></i></a>
                    </div>
                {% endif %}
                <div class="card-header">
                    <h5 class="card-title">Mes Soft Skills</h5>
                </div>
                <div class="card-body">
                    {% for softSkill in softSkills %}
                        <span class="badge rounded-pill text-bg-light m-1">
                            {{ softSkill.name }}
                            {% if not is_granted('ROLE_CONSULTANT') %}
                                <a href="{{ path('app_hard_skill_edit', {id: softSkill.id}) }}"><i
                                        class="bi bi-pencil-square"></i></a>
                                {{ include('soft_skill/_delete_form.html.twig') }}
                            {% endif %}
                        </span>
                    {% endfor %}

                </div>
            </div>

        </div>
    </div>
</div>
