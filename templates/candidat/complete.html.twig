{% extends 'base.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}

    <main class="candidatForm container-md mb-5">
        <h1>Compléter mon profil</h1>

        <div class="accordion" id="accordionExample">

            <div class="accordion-item">
                <h2 class="accordion-header" id="account">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Mon compte :
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="account"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        {{ component('user_update', {
                            user: app.user
                        }) }}

                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="personnalInfos">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Informations Personnelles :
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="personnalInfos"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        {{ component('candidat_form', {
                            candidat: app.user.candidat
                        }) }}

                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="experience">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Ajouter une Expérience
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="experience"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        {{ component('experience_form', {
                            pathInfo : app.request.pathInfo,
                            experience : null
                        }) }}

                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="formation">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                        Ajouter une Formation
                    </button>
                </h2>
                <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="formation"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        {{ component('formation_form', {
                            pathInfo : app.request.pathInfo,
                            formation : null
                        }) }}

                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="certification">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                        Ajouter une Certification
                    </button>
                </h2>
                <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="certification"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        {{ component('certification_form', {
                            experience : null
                        }) }}

                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="skills">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                        Ajouter des Compétences
                    </button>
                </h2>
                <div id="collapseSix" class="accordion-collapse collapse" aria-labelledby="skills"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        <h3>Soft Skills</h3>
                        {{ component('softskill_form') }}
                        <h3>Hard Skills</h3>
                        {{ component('hardskill_form') }}
                        <h3>Language</h3>
                        {{ component('language_form') }}

                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header" id="skills">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseSeven" aria-expanded="false" aria-controls="collapseSeven">
                        Ajouter des Hobbies
                    </button>
                </h2>
                <div id="collapseSeven" class="accordion-collapse collapse" aria-labelledby="hobbies"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        {{ component('hobby_form') }}

                    </div>
                </div>
            </div>

        </div>

        <a class="btn btn-primary mt-3" href="{{ path('app_candidat_profile') }}" title="Retour au profil"><i class='me-1 bi bi-arrow-return-left'></i>Retour au profil</a>

    </main>

{% endblock %}
