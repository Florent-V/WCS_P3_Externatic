<div id="hobbieesPanel" class="showCard hobbies">
    <div class="card">

        <div class="card-body">
            <h3 class="card-title text-center">Mes Hobbies</h3>
            <div class="cardIcons">
                <a href="{{ path('app_hobbie_new') }}"><i class="bi bi-plus-lg"></i></a>
            </div>

            <div class="card mb-2">

                <div class="card-body">
                    {% for hobby in hobbies %}
                        <span class="badge rounded-pill text-bg-light mb-1">
                            {{ hobby.title }}
                            <a href="{{ path('app_hobbie_edit', {id: hobby.id}) }}"><i
                                    class="bi bi-pencil-square"></i></a>
                            {{ include('hobbie/_delete_form.html.twig') }}
                        </span>
                    {% endfor %}

                </div>

            </div>
        </div>

    </div>
</div>
