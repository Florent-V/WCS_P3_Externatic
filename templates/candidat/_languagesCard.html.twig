<div id="languagesPanel" class="showCard languages">
    <div class="card">

        <div class="card-body">
            <h3 class="card-title text-center">Mes Langues parl√©es</h3>
            <div class="cardIcons">
                <a href="{{ path('app_language_new') }}"><i class="bi bi-plus-lg"></i></a>
            </div>

            <div class="card mb-2">

                <ul class="list-group list-group-flush">
                    {% for language in languages %}
                        <li class="list-group-item">
                            <span>{{ language.language }}. Niveau : {{ language.level }}</span>
                            <a href="{{ path('app_language_edit', {id: language.id}) }}"><i
                                    class="bi bi-pencil-square"></i></a>
                            {{ include('language/_delete_form.html.twig') }}
                        </li>
                    {% endfor %}
                </ul>

            </div>
        </div>

    </div>
</div>
