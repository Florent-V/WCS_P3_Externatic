<div class="searchResultForm">
    {{ form_start(form, {
        attr: {class: 'form'}
    }) }}
    {{ form_row(form.searchQuery, {
        label: "Recherche",
        row_attr: {class: 'form-floating searchQuery'}
    }) }}

    <div class="accordion container mb-5" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button d-inline text-center" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Plus de critères...
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                 data-bs-parent="#accordionExample">
                <div class="accordion-body">

                    <div class="d-flex justify-content-between w-100">
                        {{ form_row(form.remote, {
                            label: "Remote",
                            row_attr: {class: 'remote size-bar'}
                        }) }}
                        {{ form_row(form.workTime, {
                            label: "Temps de travail",
                            row_attr: {class: 'workTime size-bar'}
                        }) }}
                    </div>
                    <div class="d-flex justify-content-between w-100 mt-3">
                        {{ form_row(form.period, {
                            label: "Ancienneté des annonces",
                            row_attr: {class: 'period size-bar'}
                        }) }}
                        {{ form_row(form.company, {
                            label: "Entreprise",
                            row_attr: {class: 'company size-bar'}
                        }) }}
                    </div>
                    <div class="d-flex justify-content-between w-100 mt-3">
                        {{ form_row(form.salaryMin, {
                            label: "Salaire Min",
                            row_attr: {class: 'text-editor salaryMin size-bar'}
                        }) }}
                        {{ form_row(form.contractType, {
                            label: "Type de contrat",
                            row_attr: {class: 'contractType size-bar'}
                        }) }}
                    </div>
                    {{ form_row(form.techno, {
                        row_attr: {class: 'techno'}
                    }) }}
                    {{ form_widget(form) }}

                </div>
            </div>
        </div>
    </div>




    <div class="d-flex justify-content-center mt-3"><button type="submit">C'est parti !</button></div>
    {{ form_end(form) }}
</div>



