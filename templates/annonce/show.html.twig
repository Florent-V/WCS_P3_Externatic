{% extends 'base.html.twig' %}

{% block body %}
    <main class="show_annonce">
        <div class="d-flex">
            <img src="{{ annonce.picture }}" alt="logo de l'entreprise" class="ms-5 logo">
            <div class="w-100 d-flex flex-column justify-content-center">
                <h1><strong>{{ annonce.title }}</strong></h1>
                <div class="d-flex justify-content-center">
                        <h2 class="name_company d-inline-block align-items-center m-0">{{ annonce.company.name }}</h2>
                        <p class="created_at d-flex align-items-center m-0">Posté le {{ annonce.createdAt|date('d-m-Y') }}</p>
                </div>
            </div>
        </div>

        <div class="d-flex mb-5 me-3">
            <div class="tech d-inline-block mt-3">
                <ul class="ms-2 ps-0 mt-2 pb-2">
                    {% for tech in annonce.techno %}
                        <li class="mt-3">
                            <img src="{{ asset('/uploads/images/logo/' ~ tech.picture) }}" alt="image de {{ tech.name }}"
                            class="image_techno">
                            <p class="d-inline-block">{{ tech.name }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="d-flex flex-column all_info mt-3">
                <div class="header_info">
                    <p class="mb-1">{{ annonce.company.city }}, {{ annonce.company.address }} ({{ annonce.company.zipCode }})</p>
                    <p> De {{ annonce.salaryMin }}€ à {{ annonce.salaryMax }}€ par ans - {{ annonce.workTime }}, {{ annonce.contractType }}, {{ annonce.studyLevel }} </p>
                </div>

                <div>
                    <h2 class="h2-info">Description du poste</h2>
                    {{ annonce.Description }}
                </div>
                <div class="mt-4">
                    {% if annonce.optionalInfo != null %}
                    <h2 class="h2-info">Information complémentaire</h2>
                    {{ annonce.optionalInfo }}
                    {% endif %}
                </div>
                <div class="mt-4">
                    <h2 class="h2-info">Description de l'entreprise</h2>
                    {{ annonce.company.information }}
                </div>
            </div>
        </div>

    </main>
{% endblock %}
