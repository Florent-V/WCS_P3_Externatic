{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path("annonce_search_results") }}" class="ms-4">Retours aux offres</a>
    <main class="show_annonce" {{ stimulus_controller('favoriteoffer') }}>
        <div class="d-flex">
            <img src="{{ annonce.picture }}" alt="logo de l'entreprise" class="ms-5 logo">
            <div class="w-100 d-flex flex-column justify-content-center">
                <h1 class="mt-2"><strong>{{ annonce.title }}</strong></h1>
                <div class="d-flex justify-content-center">
                    <a href="{{ path('app_company_show', {'id': annonce.company.id}) }}"><h2 class="name_company d-inline-block align-items-center m-0 text-dark">{{ annonce.company.name }}</h2></a>
                    {% if is_granted("ROLE_CANDIDAT") %}
                        <a href="{{ path('annonce_add_favorite', {id: annonce.id}) }}" class="fav-offer btn btn-primary fav-button">
                            <i class="bi {{ app.user.candidat.isInFavorite(annonce) ? 'bi-bookmark-fill' : 'bi-bookmark' }}"></i>
                        </a>
                    {% endif %}
                    <p class="created_at d-flex align-items-center m-0">Posté
                        le {{ annonce.createdAt|date('d-m-Y') }}</p>
                </div>
            </div>
        </div>

        <div class="d-flex mb-5 me-3">
            <div class="tech d-inline-block mt-3">
                <ul class="ms-2 ps-0 mt-2 pb-2">
                    {% for tech in annonce.techno %}
                        <li class="mt-3">
                            <img src="{{ asset('/uploads/images/logo/' ~ tech.picture) }}"
                                 alt="image de {{ tech.name }}"
                                 class="image_techno">
                            <p class="d-inline-block">{{ tech.name }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="d-flex flex-column all_info mt-3">
                <div class="header_info">
                    <p class="mb-1"><strong>{{ annonce.company.city|upper }}</strong> - {{ annonce.company.zipCode }}, {{ annonce.company.address }}
                        </p>
                    <p> {{ annonce.salaryMin }}€ à {{ annonce.salaryMax }}€ - {{annonce.workTime}}h -
                        {{ annonce.contractType }}, {{ annonce.studyLevel }} </p>
                </div>

                <div>
                    <h2 class="h2-info">Description du poste</h2>
                    {{ annonce.Description|raw }}
                </div>
                <div class="mt-4">
                    {% if annonce.optionalInfo != null %}
                        <h2 class="h2-info">Information complémentaire</h2>
                        {{ annonce.optionalInfo }}
                    {% endif %}
                </div>
                <div class="mt-4">
                    <h2 class="h2-info">Description de l'entreprise</h2>
                    {{ annonce.company.information }}
                </div>
            </div>
        </div>

        <div class="accordion container mb-5" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button d-inline text-center" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Postuler
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {% if is_granted("ROLE_CANDIDAT") %}
                            {% if recruProcessActuel == null %}
                                {{ form(form) }}
                            {% else %}
                                <p>Vous avez déjà un processus en cours</p>
                            {% endif %}
                        {% elseif is_granted("ROLE_CONSULTANT") %}
                            <p>Encart réservé aux candidats - <a href="{{ path('consultant_board') }}">Retourner à votre
                                    tableau de bord</a></p>
                        {% else %}
                            <a href="{{ path('app_login') }}">Il faut vous connecter pour postuler !</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>


    </main>
{% endblock %}
