{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
    <div><h1>Bienvenue sur votre messagerie</h1></div>
    <main>

        <table class="table table-striped table-sm">
            <thead class="thead-light">
            <tr>
                <th scope="row">Date</th>
                <th scope="row">Expediteur</th>
                <th scope="row">Processus de recrutement</th>
                <th scope="row">Title</th>
                <th scope="row">Contenu</th>
            </tr>
            </thead>

            <tbody id="swup">
            {% for message in receivedMessages %}
                {% include('_include/_messageHeader.html.twig') %}
            {% endfor %}

        </table>
        <div id="pageSelector" class="container d-flex justify-content-center">{{ knp_pagination_render(receivedMessages) }}</div>
    </main>
{% endblock %}
