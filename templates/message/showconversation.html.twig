{% extends 'base.html.twig' %}



{% block title %}Vous discutez avec{% endblock %}
{% block body %}
    <main class="messageConversation container">
        <h1 class="text-center">Echange relatifs à <span
                class="text-primary">{{ recruitmentProcess.annonce.title ?: recruitmentProcess.company.name }} </span>
        </h1>
        <div class="Conversation d-flex justify-content-around">
            <section class="conversationList d-none d-lg-block col-md-5">
                <div class="table-responsive-md">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="row">Date</th>
                            <th scope="row">Expediteur</th>
                            <th scope="row">Intitulé de l'annonce</th>
                            <th scope="row">Contenu</th>
                        </tr>
                        </thead>

                        <tbody id="swup" data-controller="inbox">
                        {% for message in receivedMessages %}
                            {% include('_include/_messageHeader.html.twig') %}
                        {% endfor %}
                    </table>
                </div>
                <div id="pageSelector"
                     class="container d-flex justify-content-center">{{ knp_pagination_render(receivedMessages) }}</div>
            </section>

            <section class="allconv col-lg-5 d-flex justify-content-around flex-column">
                <div {{ stimulus_controller('message_scroll') }}>
                    {{ component('conversation', {
                        recruitmentProcess: recruitmentProcess
                    }) }}
                </div>
                <div class="formconvo col-12">
                    {{ form_start(form) }}
                    {{ form_widget(form.content) }}
                    <button class="btn" type="submit"><i class="bi bi-chat-text-fill"> Envoyer </i></button>
                    {{ form_end(form) }}
                </div>
            </section>
        </div>
    </main>
{% endblock %}
