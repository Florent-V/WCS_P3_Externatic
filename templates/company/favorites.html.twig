{% extends 'base.html.twig' %}

{% block title %}Mes entreprises{% endblock %}

{% block body %}
    <h1>Company index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Siret</th>
            <th>Name</th>
            <th>Logo</th>
            <th>ZipCode</th>
            <th>Address</th>
            <th>City</th>
            <th>PhoneNumber</th>
            <th>ContactName</th>
            <th>Size</th>
            <th>Information</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>

        {% for company in app.user.candidat.favoriteCompanies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.siret }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.logo }}</td>
                <td>{{ company.zipCode }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.phoneNumber }}</td>
                <td>{{ company.contactName }}</td>
                <td>{{ company.size }}</td>
                <td>{{ company.information }}</td>
                <td>
                    <a href="{{ path('app_company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('annonce_show_by_company', {'id': company.id}) }}">Voir les annonces</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}



